{% extends 'partials/base.html.twig' %}

{% block stylesheets %}
  {% do assets.addCss('theme://public/css/dash-blog.css') %}
  {{ parent() }}
{% endblock stylesheets %}

{% block javascript %}
  {{ parent() }}
  {% do assets.addJs('theme://public/js/dash-blog.js', {'group': 'bottom'}) %}
{% endblock %}

{% block content %}
<section class="dd-section dd-error">
  <div class="dd-section--container">
    <div class="container">
      <div class="columns">
        <div class="column col-12">
          <div class="dd-error__body">
            {{ page.content }}
          </div>
          <div class="dd-error__search">
            {% include 'partials/search_form.html.twig' %}
          </div>
          <div class="dd-error__categories">
            <h2>Todas as categorias</h2>
            {% include 'partials/categories.html.twig' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
